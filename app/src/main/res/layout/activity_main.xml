<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".MainActivity"
    android:background="@color/colourBackground">

    <com.agrawalsuneet.dotsloader.loaders.LazyLoader
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/myLoaderProgress"
        android:layout_margin="149dp"
        android:layout_marginTop="30dp"
        app:lazyloader_animDur="800"
        app:lazyloader_dotsDist="15dp"
        app:lazyloader_dotsRadius="11dp"
        app:lazyloader_firstDelayDur="150"
        app:lazyloader_firstDotColor="#6E7171"
        app:lazyloader_interpolator="@android:anim/decelerate_interpolator"
        app:lazyloader_secondDelayDur="300"
        app:lazyloader_secondDotColor="#6E7171"
        app:lazyloader_thirdDotColor="#6E7171" />




    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:id="@+id/imgRobo"
        android:src="@drawable/robo"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="                                  BY-RPA"

        android:layout_alignParentBottom="true"
        android:textSize="20sp"
        android:textColor="@color/colorAccent"/>


</RelativeLayout>

